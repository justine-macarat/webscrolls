.grid-container-extension {
    background-color: #ffffff;
    grid-row-gap: 0px;
    grid-column-gap: 5px;
    box-sizing: border-box;
    padding: 20px;
    align-content: center;
    justify-content: center;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    position: absolute;
    width: calc(22% - 40px);
    top: 260px;
    border-radius: 15px;
    font-family: Raleway;
}
.fullwidth {
    width: 100%;
    border: none;
    border-bottom: 1px solid grey;
    font-family: Raleway;
    background-color: #ffffff;
    border-bottom: 1px solid black;
}
.fullwidth:focus {outline: none;}
.fullwidthbutton {
    width: 100%;
    border: 0;
    height:35px;
    background: #0f4b9c;
    color: white;
    font-family: Raleway;
    font-size: 16px; 
    color: #ffffff; 
    font-weight: 500; 
    text-align: center; 
    font-style: normal;
    margin: auto;
    border-radius: 5px;
}
.class-submit {
    padding-top: 10px;
}
.class-name {
    padding-top: 10px;
}
.class-header{
    width: 100%;
    font-family: Raleway;
    font-size: 25px; 
    color: #0f4b9c; 
    font-weight: 500; 
    text-align: center; 
    font-style: normal;
}

body {margin: 0}
